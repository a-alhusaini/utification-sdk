{
  "include": [
    "src/**/*.js"
  ],
  "exclude": [
    "test/**/*.js"
  ],
  "compilerOptions": {
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "UMD",
    "outDir": "./dist",
    "declaration": true,
    "allowJs": true,
    "checkJs": true,
    "noEmit": false,
  }
}
